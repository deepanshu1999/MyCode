<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment3"
    android:background="#ffff"
    >

    <include layout="@layout/toolbar"
        android:id="@+id/contactus"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/myRelative"
        android:layout_marginStart="112dp"
        android:layout_marginTop="165dp"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="112dp">


        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="Year :"
            android:textColor="#c60003"
            android:layout_marginVertical="5dp"
            android:paddingVertical="5dp"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advSpinner1"
            android:paddingHorizontal="5dp"
            android:text="Month :"
            android:layout_marginVertical="5dp"
            android:paddingVertical="5dp"
            android:textColor="#c60003"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advSpinner2"
            android:paddingHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:paddingVertical="5dp"
            android:text="Type :"
            android:textColor="#c60003"
            android:textSize="22sp" />


        <Spinner
            android:id="@+id/advSpinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/year"
            android:padding="5dp"
            android:layout_marginVertical="5dp"
            android:paddingVertical="5dp"
            android:prompt="@string/title1"

            />

        <Spinner
            android:id="@+id/advSpinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/year"
            android:layout_toRightOf="@id/month"
            android:layout_marginVertical="5dp"
            android:paddingVertical="5dp"
            android:padding="5dp"
            android:prompt="@string/title1" />

        <Spinner
            android:id="@+id/advSpinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginVertical="5dp"
            android:paddingVertical="5dp"
            android:layout_below="@id/advSpinner2"
            android:padding="5dp"
            android:layout_toEndOf="@id/type"
            android:prompt="@string/title1"

            android:layout_toRightOf="@id/type" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:id="@+id/applyButton"
            android:layout_marginVertical="5dp"
            android:paddingVertical="5dp"
            android:layout_below="@id/type"
            android:background="#e2ce1b"/>


    </RelativeLayout>



    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recyclerView2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/advSpinner1"-->
        <!--android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/adjwebbackground"
        android:id="@+id/myLayout">

        <TextView
            android:id="@+id/contactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/easily"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Contact Us"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:padding="10dp"
            android:id="@+id/easily"
            android:gravity="center_horizontal"
            android:text="Easily accessible legal database"
            android:fontFamily="@font/devroye"
            android:textColor="#ffffff"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/contactUs"
            android:layout_below="@+id/contactUs"
            android:autoLink="phone"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="+919335151550"
            android:textColor="#000000"
            android:textColorLink="#ffffff"
            android:textSize="16sp"
            android:layout_alignRight="@+id/contactUs" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/imageView"
            android:autoLink="phone"
            android:paddingVertical="5dp"
            android:text="+917706833426"
            android:textColor="#000000"
            android:textColorLink="#ffffff"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/textView10" />

        <TextView

            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/imageView3"
            android:autoLink="email"
            android:paddingVertical="5dp"
            android:text="info@adjonline.com"
            android:textColor="#000000"
            android:textColorLink="@color/white"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/textView10" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_below="@id/easily"
            android:layout_alignTop="@+id/textView10"
            android:layout_toStartOf="@+id/textView10"
            android:src="@drawable/ic_action_call"
            android:layout_toLeftOf="@+id/textView10" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/contactUs"
            android:layout_below="@+id/imageView"
            android:padding="7dp"
            android:src="@drawable/ic_action_call"
            android:layout_alignLeft="@+id/contactUs" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_toStartOf="@+id/textView10"
            android:padding="7dp"
            android:src="@drawable/ic_action_email"
            android:layout_toLeftOf="@+id/textView10" />

    </RelativeLayout>

